<%include partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>
    <form class="ui form" action="/blogs/<%=found._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=found.title%>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<%=found.image%>">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="blog[body]"><%-found.body%></textarea>
        </div>
        <input class="ui black big basic button" type="submit">
    </form>
</div>
<%include partials/footer%>